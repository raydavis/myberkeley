<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>edu.berkeley.myberkeley.base</artifactId>
    <groupId>edu.berkeley.myberkeley</groupId>
    <version>1.2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>edu.berkeley.myberkeley.launchpad</artifactId>
  <name>MyBerkeley executable</name>
  <properties>
    <nakamura.version>1.2-SNAPSHOT</nakamura.version>
  </properties>
  <packaging>jar</packaging>
  <build>
    <resources>
      <resource>
        <directory>${project.build.directory}/generated-resources</directory>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.sling</groupId>
        <artifactId>maven-launchpad-plugin</artifactId>
        <version>2.1.0</version>
        <configuration>
          <defaultBundleList>
            <groupId>org.sakaiproject.nakamura</groupId>
            <artifactId>org.sakaiproject.nakamura.app</artifactId>
            <version>${nakamura.version}</version>
          </defaultBundleList>
          <additionalBundles>
            <bundle>
              <groupId>org.sakaiproject.nakamura</groupId>
              <artifactId>org.sakaiproject.nakamura.mysqljdbc</artifactId>
              <version>${nakamura.version}</version>
              <startLevel>1</startLevel>
            </bundle>
            <bundle>
              <groupId>edu.berkeley.myberkeley</groupId>
              <artifactId>edu.berkeley.myberkeley.ojdbc6</artifactId>
              <version>1.2-SNAPSHOT</version>
              <startLevel>1</startLevel>
            </bundle>
            <bundle>
              <groupId>org.sakaiproject.nakamura</groupId>
              <artifactId>org.sakaiproject.nakamura.auth.cas</artifactId>
              <version>${nakamura.version}</version>
              <startLevel>15</startLevel>
            </bundle>
            <bundle>
              <groupId>org.sakaiproject.nakamura</groupId>
              <artifactId>org.sakaiproject.nakamura.uxloader-myberkeley</artifactId>
              <version>1.2-SNAPSHOT</version>
              <startLevel>30</startLevel>
            </bundle>
            <bundle>
              <groupId>org.apache.sling</groupId>
              <artifactId>org.apache.sling.jcr.contentloader</artifactId>
              <version>2.1.3.9999.1141252</version>
              <startLevel>20</startLevel>
            </bundle>
            <bundle>
              <groupId>edu.berkeley.myberkeley</groupId>
              <artifactId>edu.berkeley.myberkeley.caldav</artifactId>
              <version>1.2-SNAPSHOT</version>
              <startLevel>30</startLevel>
            </bundle>
            <bundle>
              <groupId>edu.berkeley.myberkeley</groupId>
              <artifactId>edu.berkeley.myberkeley.dynamiclist</artifactId>
              <version>1.2-SNAPSHOT</version>
              <startLevel>30</startLevel>
            </bundle>
            <bundle>
              <groupId>edu.berkeley.myberkeley</groupId>
              <artifactId>edu.berkeley.myberkeley.notifications</artifactId>
              <version>1.2-SNAPSHOT</version>
              <startLevel>30</startLevel>
            </bundle>
            <bundle>
              <groupId>edu.berkeley.myberkeley</groupId>
              <artifactId>edu.berkeley.myberkeley.foreignprincipal</artifactId>
              <version>1.2-SNAPSHOT</version>
              <startLevel>30</startLevel>
            </bundle>
            <bundle>
              <groupId>edu.berkeley.myberkeley</groupId>
              <artifactId>edu.berkeley.myberkeley.provision</artifactId>
              <version>1.2-SNAPSHOT</version>
              <startLevel>30</startLevel>
            </bundle>
            <!-- MYB-597 -->
            <bundle>
              <groupId>org.apache.felix</groupId>
              <artifactId>org.apache.felix.fileinstall</artifactId>
              <version>3.1.11-20110216</version>
              <startLevel>30</startLevel>
            </bundle>
          </additionalBundles>
          <bundleExclusions>
            <bundle>
              <groupId>org.sakaiproject.nakamura</groupId>
              <artifactId>org.sakaiproject.nakamura.derby-driver</artifactId>
            </bundle>
          </bundleExclusions>
          <!-- Needs to be copied from nakamura.app -->
          <jarWebSupport>
            <groupId>org.sakaiproject.nakamura</groupId>
            <artifactId>org.sakaiproject.nakamura.jetty-config</artifactId>
            <version>${nakamura.version}</version>
            <startLevel>5</startLevel>
          </jarWebSupport>
        </configuration>
        <executions>
          <execution>
            <id>prepare-package</id>
            <goals>
              <goal>prepare-package</goal>
            </goals>
          </execution>
          <execution>
            <id>create-karaf-descriptor</id>
            <goals>
              <goal>create-karaf-descriptor</goal>
            </goals>
            <configuration>
              <includeDefaultBundles>false</includeDefaultBundles>
              <exclusions>
                <exclusion>org.apache.felix:org.apache.felix.configadmin</exclusion>
                <exclusion>org.apache.felix:org.apache.felix.webconsole</exclusion>
              </exclusions>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Copy property resources from Nakamura's app launchpad -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>generate-sources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>org.sakaiproject.nakamura</groupId>
                  <artifactId>org.sakaiproject.nakamura.app</artifactId>
                  <version>${nakamura.version}</version>
                  <outputDirectory>${project.build.directory}/generated-resources</outputDirectory>
                  <includes>*.properties,**\/*.class</includes>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Needs to be copied from Nakamura's app/pom.xml -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <addDefaultImplementationEntries>
                true
              </addDefaultImplementationEntries>
            </manifest>
            <manifestEntries>
              <Specification-Title>Nakamura Server</Specification-Title>
              <Specification-Version>${project.version}</Specification-Version>
              <Specification-Vendor>The Sakai Foundation</Specification-Vendor>
              <Implementation-Title>Nakamura Server</Implementation-Title>
              <Implementation-Version>${project.version}</Implementation-Version>
              <Implementation-Vendor-Id>${project.groupId}</Implementation-Vendor-Id>
              <Implementation-Vendor>The Sakai Foundation</Implementation-Vendor>
              <Main-Class>org.sakaiproject.nakamura.app.NakamuraMain</Main-Class>
            </manifestEntries>
          </archive>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <!-- These dependencies should be copied from Nakamura's app/pom.xml -->
    <dependency>
      <groupId>org.apache.sling</groupId>
      <artifactId>org.apache.sling.launchpad.base</artifactId>
      <version>2.3.0</version>
      <classifier>webapp</classifier>
      <type>war</type>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.sling</groupId>
      <artifactId>org.apache.sling.launchpad.base</artifactId>
      <version>2.3.0</version>
      <classifier>app</classifier>
      <scope>provided</scope>
    </dependency>
  </dependencies>
</project>
